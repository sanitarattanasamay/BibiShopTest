{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}

<div class="example-wrapper">
    <a href="{{path('account_adress_add')}}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Gérer mes adresses</h1>
    <hr>
    {% if app.user.adresses|length == 0 %}
        <p>Vous n'avez pas encore ajouté d'adresse. <br> Cliquez <a href="{{path('account_adress_add')}}">ici</a> pour en ajouter une</p>
    {% else %}
        <div class="row">
            {% for adress in app.user.adresses %}        
            <div class="col_md-4 mx-2">
                <div class="card" style="width:18rem">
                    <div class="car-body px-4">
                        <h5 class="card-title">{{adress.name}}</h5>
                        <p class="card-text">
                            {{adress.adress}}<br>
                            {{adress.postal}} - {{adress.city}} - {{adress.country}}                    
                        </p>
                        <a href="{{path('account_adress_edit',{'id':adress.id}) }}">Modifier</a> | <a href="{{path('account_adress_delete',{'id':adress.id}) }}">Supprimer</a>
                    </div>
                
                </div>
            </div>
            {% endfor %}
        </div>
        

    {% endif %}
    <a href="{{path('account')}}"><- Retour à mon compte</a>
</div>
{% endblock %}
